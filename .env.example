# Environment Variables for NVIDIA NIM Chatbot
# Copy this file to .env and fill in your actual API keys

# ============================================
# API Keys (Required)
# ============================================

# NVIDIA NIM API Key - Get from https://build.nvidia.com/
NVIDIA_API_KEY=your_nvidia_api_key_here

# OpenRouter API Key - Get from https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Export Key - Used for log export authentication (generate a secure random string)
EXPORT_KEY=your_export_key_here

# Frontend Shared Secret - Used for request validation (generate a secure random string)
FRONTEND_SHARED_SECRET=your_frontend_secret_here

# Tavily API Key - Get from https://tavily.com/ (for web search feature)
TAVILY_API_KEY=your_tavily_api_key_here

# ============================================
# Security Settings (Production)
# ============================================

# Set to 'production' to disable localhost in CORS
FLASK_ENV=development

# Set to 'true' to disable chat logging (recommended for privacy in production)
DISABLE_CHAT_LOGGING=false

# Set automatically by Render.com - do not set manually
# RENDER=true
